
@{
    ViewBag.Title = "Gerenciamento de usuários";
}

@section scripts{

    @Scripts.Render("~/bundles/usuario")

}

<div ng-controller="usuarioController">

    <h2>@ViewBag.Title</h2>

    <div style="margin-bottom:10px;">
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalForm" ng-click="novo()">
            <i class="glyphicon glyphicon-plus"></i> Novo registro
        </button>
    </div>

    <div class="">

        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Açõs</th>
                    <th>Nome</th>
                    <th>E-mail</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in listaUsuarios">
                    <td class="text-center">
                        <a href="javascript:void(0);" ng-click="editar(item)"><i class="glyphicon glyphicon-pencil"></i></a>
                        <a href="javascript:void(0);" ng-click="excluir(item)"><i class="glyphicon glyphicon-remove"></i></a>
                    </td>
                    <td ng-bind="item.UsuarioNome"></td>
                    <td ng-bind="item.UsuarioEmail"></td>
                </tr>
            </tbody>
        </table>

    </div>



    <!-- Modal -->
    <div class="modal fade" id="modalForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Usuário</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <input type="hidden" name="UsuarioId" id="UsuarioId" ng-model="UsuarioId" />

                        <div class="form-group">
                            <label for="UsuarioNome">Nome</label>
                            <input type="text" class="form-control" id="UsuarioNome" ng-model="UsuarioNome" placeholder="Nome do usuário">
                        </div>

                        <div class="form-group">
                            <label for="UsuarioEmail">E-mail</label>
                            <input type="text" class="form-control" id="UsuarioEmail" ng-model="UsuarioEmail" placeholder="E-mail do usuário">
                        </div>

                        <div class="form-group">
                            <label for="UsuarioSenha">Senha</label>
                            <input type="password" class="form-control" id="UsuarioSenha" ng-model="UsuarioSenha" placeholder="Senha do usuário">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" ng-click="salvar()">Salvar</button>
                </div>
            </div>
        </div>
    </div>

</div>