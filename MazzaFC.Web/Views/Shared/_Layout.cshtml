<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mazza FC | Teste Full Stack</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="appMazzaFC">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mazza FC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Contato", "Contato", "Home", new { area = "" }, new { })</li>
                    <li>@Html.ActionLink("Usuário", "Index", "Usuario", new { area = "" }, new { })</li>
                    <li>@Html.ActionLink("Médico", "Index", "Medico", new { area = "" }, new { })</li>
                    <li>@Html.ActionLink("Paciente", "Index", "Paciente", new { area = "" }, new { })</li>
                    <li>@Html.ActionLink("Agendamento", "Index", "Agendamento", new { area = "" }, new { })</li>
                </ul>


                @if (User.Identity.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { area = "Autenticacao", id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()

                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="javascript:document.getElementById('logoutForm').submit()">Sair</a></li>
                        </ul>
                    }
                }


            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Teste Full Stack - Felipe Melleiro</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")

    <script src="~/Scripts/date.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
